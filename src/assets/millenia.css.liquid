:root{
    font-size: 16px;

    --body-bg-light: white;
    --body-bg-dark: hsl(0, 0%, 7%);
    --body-bg-dark-hover: hsl(0, 0%, 18%);

    --color-light-gray: hsla(0, 0%, 97%,1);
    --color-text: hsl(0,0%,8%,1);

    --font-family-heading: 'Simplifica', 'proxima-nova', 'roboto', sans-serif;
    --font-family-body: 'proxima-nova', 'roboto', sans-serif;
}
/* }Mobile breakpoint: 678px */

body{
    background: var(--body-bg-light);
    /* background: pink; */
}


/* ---- Modules ----- */
.section{
    padding: 2rem;
}

.section--dark{
    background: var(--body-bg-dark);
}

.grid{
    display: grid;
    justify-items: stretch;
    align-content: start;
    grid-column-gap: 32px;
    grid-row-gap: 32px;
}

.grid__img-container > .grid__img{
    max-height: 100%;
    width: 100%;
    object-fit: cover;
}

.grid__img-container{
    height: 100%;
}


.container{
    padding: 0;
}


/* Buttons */
.btn {
    display: block;
    max-width: max-content;
    background: var(--color-light-gray);
    border: none;
    color: var(--color-text);
    font-variant-caps: all-small-caps;
    padding: .5rem 1rem;
    font-weight: 600;
    line-height: 1;
    text-align: center;
    letter-spacing: .05em;
    margin: 0 0 1rem;
    min-height: unset;
    transition: all .15s ease-in-out;
}

.btn:hover{
    border: none;
}

.btn--dark{
    background: var(--body-bg-dark);
    color: white;
    border: none;
    height: auto !important;
}

.btn--dark:hover{
    background: var(--body-bg-dark-hover);
    border: none;
}

p.btn.btn--sold-out {
    font-style: italic;
    /* font-weight: 400; */
    color: #a0a0a0;
    margin: 0 auto;
}

.btn--cta{
    color: black;
    width: 100%;
    max-width: 24rem;
    margin: 0 auto;
    padding: 1rem;
    font-size: 1.125rem;
    -webkit-box-shadow: 0 6px 6px -6px rgba(0,0,0,0.16), 0 6px 6px -6px rgba(0,0,0,0.23);
            box-shadow: 0 6px 6px -6px rgba(0,0,0,0.16), 0 6px 6px -6px rgba(0,0,0,0.23);
}

.btn--cta:hover{
    color: black;
    transform: translateY(-2px);
    -webkit-box-shadow: 0 8px 6px -6px rgba(0,0,0,0.16), 0 8px 6px -6px rgba(0,0,0,0.23);
            box-shadow: 0 8px 6px -6px rgba(0,0,0,0.16), 0 8px 6px -6px rgba(0,0,0,0.23);
}

@media screen and (max-width: 768px){
    .btn{
        font-size: 1rem !important;
    }
    .btn--cta:hover{
        transform: translateY(0);
    }
}


/* ----- Product --------- */

.product{
