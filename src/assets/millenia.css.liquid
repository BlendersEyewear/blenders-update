/* ------ Product Grid 1 ------ */
.pg-1{
    grid-row-gap: 16px;
    grid-template-columns: repeat(3, 1fr);
    grid-template-rows: repeat(3, minmax(auto, 14rem));
    grid-template-rows:  minmax(auto, 14rem) minmax(auto, 8rem) minmax(auto, 14rem);
    grid-auto-flow: column;
}

.pg-bp-ls, .pg-jc-ls {
    grid-row: 1/3;
    grid-column: 1/2;
}

.pg-bp, .pg-jc {
    grid-column: 1/2;
    grid-row: 3/4;
}

.pg-ki-ls, .pg-af-ls {
    grid-column: 2/3;
    grid-row: 2/4;
}

.pg-ki, .pg-af {
    grid-column: 2/3;
    grid-row: 1/2;
}

.pg-noc-ls, .pg-bl-ls {
    grid-column: 3/4;
    grid-row: 1/3;
}

.pg-img{
    height: 100%;
}

.pg-1 .pg-img{
    height: 34rem;
}

.pg-img > img {
    width: 100%;
    max-height: 100%;
    object-fit: cover;
    height: 100%;
    /* clip-path: polygon(0 0, 100% 34%, 100% 100%, 0 68%);  */
    /* Clip path to radness */
}


