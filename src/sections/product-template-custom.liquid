                <h4 class="lifestyle-product-title">{{product.title}}</h4>

                <img
                    src="https://picsum.photos/623/778"
                    data-flickity-lazyload="https://picsum.photos/623/778"
                    alt=""
                    class="product-lifestyle-image product-lifestyle-image--1">
                
                <img
                    src="https://picsum.photos/320"
                    data-flickity-lazyload="https://picsum.photos/320"
                    alt=""
                    class="product-lifestyle-image product-lifestyle-image--2">


                <div id="lifestyleTestimonials" class="lifestyle-testimonials"></div>
            </div>

            {% comment %} Second Column {% endcomment %}
            <div class="eight columns omega product-tab-container">
                {% assign tagline = product.metafields.custom_fields["product_tagline"] %}
                {% if tagline != blank %}
                    <h2 class="product-tagline">{{tagline}}</h2>
                {% endif %}

                <hr class="product-border">

                <img src="https://picsum.photos/580/387" data-flickity-lazyload="https://picsum.photos/580/387" alt="" class="product-lifestyle-image product-lifestyle-image--3">

                {% include 'product-tabs'%}
            </div>
        </div>
    </div>
</section>


