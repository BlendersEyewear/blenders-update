<a name="pagecontent" id="pagecontent"></a>


{% comment %}
  If heading text is filled out, show collection banner with text overlay, if not, show original image with '--has-image' collection banner
{% endcomment %}
{%if section.settings.heading != '' %}
  <div class="collection_banner collection_banner--reatil" style="background-image:url('{{ section.settings.marquee | img_url: '2600x' }}');">
    <img src="{{ 'banner-ghost.png' | asset_url }}" class="ghost" />

    {%if section.settings.top_heading != '' %}
      <h4 class="collection_banner_top_heading">{{ section.settings.top_heading }}</h4>
    {% endif %}

    <h1 class="collection_banner_title">{{ section.settings.heading }}</h1>

    {%if section.settings.subheading != '' %}
      <h4 class="collection_banner_description">{{ section.settings.subheading }}</h4>
    {% endif %}
  </div>
{% else %}

  <div class="collection_banner collection_banner--has-image collection_banner--reatil">
    <img src="{{ 'banner-ghost.png' | asset_url }}" class="ghost" />
    <img class="collection_banner_img" src="{{ section.settings.marquee | img_url: '2600x' }}" />
  </div>
{% endif %}

{% comment %} {% include 'hypervisual' %} {% endcomment %}

<div class="container main collection_banner_below">
  <div class="nine columns center-page">
    <p>{{ page.content }}</p>

    <iframe height="1720"
            allowTransparency="true"
            frameborder="0"
            scrolling="no"
            style="width:100%;border:none"
            src="https://blenders.wufoo.com/embed/q1aqkb9207s2s7h/">
      <a href="https://blenders.wufoo.com/forms/q1aqkb9207s2s7h/">
        Fill out my Wufoo form!
      </a>
    </iframe>

</div>


{% schema %}
{
    "name": "Become a Retailer",
    "class": "Become a Retailer",
    "settings": [
        {
            "type": "text",
            "id": "top_heading",
            "label": "Page Top Heading"
        },
        {
            "type": "text",
            "id": "heading",
            "label": "Page Title"
        },
        {
            "type": "text",
            "id": "subheading",
            "label": "Page Subheading"
        },
        {
            "type": "image_picker",
            "id": "marquee",
            "label": "Marquee Image"
        }
    ]
}
{% endschema %}